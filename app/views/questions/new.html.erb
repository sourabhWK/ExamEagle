<h1 style="text-align:center;color:white;background-color:red">Enter Question Detail</h1>

<%= form_with model: @question do |f| %>
    <div class="container-sm">
    
  
    <div class="row mb-3 mt-5">
    
    
      <strong><%= f.label :enter_question %></strong>
      <%= f.text_field :quest, placeholder: "Enter Question", autofocus: true %>
      
    </div>


    <div class="container d-flex me-5">
      <div class="form-group me-5">
        <strong><%= f.label :choose_language %></strong>
        <%= f.select :option, options_for_select([["C", 0], ["C++", 1], ["Java", 2]]) %>
      </div>

      <div class="form-group me-5">
        <strong><%= f.label :question_level %></strong>
        <%= f.select :q_level, options_for_select([["easy", 0], ["medium", 1], ["hard", 2]]) %>
      </div>

      <div class="form-group me-5">
        <strong><%= f.label :question_type %></strong>
        <%= f.select :q_type, options_for_select([["MCQ", 0], ["SATQ", 1], ["LATQ", 2]]) %>
      </div>
    </div>
    

    
    
 
  <%= f.submit "submit", class:"btn btn-success mt-3" %>
  </div>

<%end%>

